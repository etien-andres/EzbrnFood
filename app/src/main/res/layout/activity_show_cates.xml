<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".users_show"
    android:orientation="vertical">
    <include layout="@layout/tolbarpersonal"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/bufet" />

        <Button
            android:id="@+id/add_cate"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/verde_claro2"
            android:text="Nueva Categoria" />

        <GridView
            android:id="@+id/gid_cate"
            android:layout_width="match_parent"
            android:layout_height="395dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:verticalSpacing="5dp"
            android:numColumns="1"/>

    </LinearLayout>


</LinearLayout>