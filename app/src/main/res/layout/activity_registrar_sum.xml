<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".registrar_sum">

    <include layout="@layout/tolbarpersonal"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/suministros" />

        <EditText
            android:id="@+id/nombr_prod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:textAlignment="viewStart" />

        <EditText
            android:id="@+id/unidad_compra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Unidad de compra"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/unidad_venta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Unidad de venta"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/costo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Costo "
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/relacioncv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Relacion Compra/Venta"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/addsuministro"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:text="Agregar" />

        <Button
            android:id="@+id/showsum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mostrar Todos" />
    </LinearLayout>

</LinearLayout>